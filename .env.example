# Telegram Bot Configuration
ENV_BOT_TOKEN=your_bot_token_from_botfather
ENV_BOT_SECRET=your_secret_token_for_webhook
ENV_ADMIN_UID=your_telegram_user_id

# CAPTCHA Configuration
CAPTCHA_MODE=quiz
CAPTCHA_ENABLED=true
CAPTCHA_TIMEOUT=300000
CAPTCHA_MAX_ATTEMPTS=3

# Welcome Message
WELCOME_MESSAGE=欢迎使用私聊机器人！完成验证后，您发送的消息才会被看到。

# Quiz Questions (JSON格式, 可选 - 不填则使用默认题库)
# 格式: [{"question":"问题","options":["选项1","选项2","选项3","选项4"],"correctAnswer":索引}]
# correctAnswer 是正确答案的索引（从0开始，0表示第一个选项）
# 示例:
QUIZ_QUESTIONS=[{"question":"2+2=?","options":["3","4","5","6"],"correctAnswer":1},{"question":"哪个是水果？","options":["🥕 胡萝卜","🍎 苹果","🥔 土豆","🌽 玉米"],"correctAnswer":1}]
